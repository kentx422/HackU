<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#0EBDFF" >

	<LinearLayout
	        android:id="@+id/IDContainer2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:background="#76717F"
	>
	
	        <TextView
	            android:id="@+id/uPoint"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dip"
	            android:layout_weight="0.10"
	            android:drawableLeft="@drawable/hpb"
	            android:gravity="bottom|center"
	            android:text="1000"
	            android:textColor="#ffffff"
	            android:textSize="10pt" />
	
	        <TextView
	            android:id="@+id/uName"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:textColor="#ffffff"
	            android:text="Name"
	            android:gravity="center"
	            android:textSize="12pt" />
	
	</LinearLayout>

    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="481dp"
        android:layout_gravity="fill"
        android:layout_marginBottom="30px" >
    </FrameLayout>

    <LinearLayout
	        android:id="@+id/IDContainer3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:background="#0EBDFF"
	        >

	     
    	<ImageButton
        	android:id="@+id/localbutton"
	        android:layout_width="55dp"
	        android:layout_height="55dp"
	        android:layout_marginLeft="20px"
	        android:layout_marginRight="20px"
	        android:layout_gravity="center"
	        android:layout_weight="0"
	     
	        android:background="@drawable/localed"/>


>
	    <ImageButton
        	android:id="@+id/postbutton"
	        android:layout_width="172dp"
	        android:layout_height="55dp"
	        android:layout_gravity="center"
	        android:layout_weight="2"
	
	        
	        android:background="@drawable/helpbutton"/>>
	        

	        
	    <ImageButton
        	android:id="@+id/updatebutton"
	        android:layout_width="55dp"
	        android:layout_height="55dp"
	        android:layout_marginLeft="20px"
	        android:layout_marginRight="20px"
	        android:layout_gravity="center"
	        android:layout_weight="0"
	        android:background="@drawable/updated"/>>
	        


	</LinearLayout>


</LinearLayout>